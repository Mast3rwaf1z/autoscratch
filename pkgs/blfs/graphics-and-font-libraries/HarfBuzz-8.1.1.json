{
	"name":"harfbuzz-8.1.1",
	"src":"https://github.com/harfbuzz/harfbuzz/releases/download/8.1.1/harfbuzz-8.1.1.tar.xz",
	"config":[
		"mkdir build",
		"cd build",
		"meson setup .. --prefix=/usr --buildtype=release -Dgraphite2=enabled"
	],
	"build":[
		"cd build",
		"ninja"
	],
	"install":[
		"cd build",
		"ninja install"
	],
	"uninstall":[
		"cd build",
		"ninja uninstall"
	]
}
